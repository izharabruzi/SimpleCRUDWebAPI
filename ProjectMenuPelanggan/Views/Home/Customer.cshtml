@model List<Model.DataPelangganModel.DataPelanggan>

@{
    ViewData["Title"] = "Data Pelanggan";
}

<h1>Pelanggan</h1>

<div class="hr-line-dashed"></div>
<div class="form-group row">
    <form method="post" action="@Url.Action("CreateCustomer", "Home")" onsubmit="TambahkanItem>');">
        <button type="submit" class="btn btn-danger">Create</button>
    </form>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model[0].Nama)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Kelamin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].UpdatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Saldo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nama)
            </td>
            <td>
            @if (item.Kelamin == true)
            {
                <text>Laki-laki</text>
            }
            else
            {
                <text>Perempuan</text>
            }
        </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Saldo)
            </td>
               
                <td class="text-right">
                     <div style="display: flex; flex-direction: row; justify-content: center; align-items: center;">
                    <form method="get" action="@Url.Action("UpdateCustomer", "Home")">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-primary">Detail</button>
                    </form>
                    <form method="post" action="@Url.Action("DeleteCustomer", "Home", new { id = item.Id })" onsubmit="return confirm('hapus data pelanggan?');">
                        <input type="hidden" name="_method" value="DELETE" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                    </div>
                </td>
            </tr>    
}
    </tbody>
</table>

