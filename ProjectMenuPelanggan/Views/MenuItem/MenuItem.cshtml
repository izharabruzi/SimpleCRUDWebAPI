@model List<Model.MenuItemModel.MenuItem>

@{
    ViewData["Title"] = "Data Pelanggan";
}


<h1>Daftar Barang</h1>

<div class="hr-line-dashed"></div>
<div class="form-group row">
    <form method="post" action="@Url.Action("CreateMenuItem", "MenuItem")" onsubmit="TambahkanItem>');">
        <button type="submit" class="btn btn-danger">Create</button>
    </form>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model[0].NamaBarang)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].JumlahBarang)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].HargaBarang)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].CreatedBarang)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].UpdatedBarang)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NamaBarang)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.JumlahBarang)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HargaBarang) 
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedBarang)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdatedBarang)
                </td>
                <td class="text-right">
                    <div style="display: flex; flex-direction: row; justify-content: center; align-items: center;">
                    <form method="get" action="@Url.Action("UpdateMenuItem", "MenuItem")">
                        <input type="hidden" name="id" value="@item.IdBarang" />
                        <button type="submit" class="btn btn-primary">Detail</button>
                    </form>
                    <form method="post" action="@Url.Action("DeleteMenuItem", "MenuItem", new { id = item.IdBarang })" onsubmit="return confirm('hapus data barang?');">
                        <input type="hidden" name="_method" value="DELETE" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>


